            //             console.log($("input[name='userNo']").val());
            //             alert(i)
            //             // console.log($("#userNo").val());
            //         }
            //     }
            // }else {
            //     alert("선택x")
            //     return false;
            // }
        });
    });
</script>
</body>
</html>
