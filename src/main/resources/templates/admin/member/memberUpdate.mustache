                    // $("#updateFrm").submit();
                    for(let i=0; i<dto.length; i++) {
                        let userNo = dto[i].userNo;
                        let state = dto[i].state;
                        $.ajax({
                            // url : "/admin/member/memberUpdate/"+selectedUsers,
                            url: "/admin/member/memberUpdate/" + userNo + "/" + state,
                            type: "POST",
                            contentType: "application/json",
                            // data: JSON.stringify(selectedUsers),
                            data: JSON.stringify({ "dto": dto }),
                            dataType: "json",
                            success: function () {
                                alert("굿!")
                            },
                            error: function () {
                                console.log("뭔데 그래서", userNo)
                                alert("하...")
                            }

                        })
                    }
                    alert("수정되었습니다.")
                }
                else {
                    alert("회원을 선택해주세요")
                }
            }else {
                alert("승인이 취소되었습니다.")
            }

            //     const arr = new Array(chkCnt);
            //     console.log(arr)
