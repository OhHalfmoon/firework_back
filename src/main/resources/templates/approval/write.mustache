                                {{#docboxList}}
                                    <option value="{{docboxNo}}">{{docboxName}}</option>
                                {{/docboxList}}
                            </select>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col">작성</div>
                        </div>
