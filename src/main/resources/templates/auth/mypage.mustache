<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Dashboard</title>

    {{>layout/head}}
</head>
<body class="hold-transition sidebar-mini layout-fixed sidebar-collapse">
<div class="wrapper">

    {{>layout/header}}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0"></h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">mypage</li>
                            <li><a class="btn btn-secondary btn-sm ml-3" href="{{contextPath}}/auth/userinfo">회원정보 확인</a></li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <!-- 작업할 때 이 항목 내용을 수정하세요 -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <section class="col-lg-5 connectedSortable float-left">
                        <!-- Calendar -->
                        <div class="card bg-gradient-secondary">
                            <div class="card-header border-0">
                                <h3 class="card-title">
                                    <i class="far fa-calendar-alt"></i>

                                    개인 일정
                                </h3>
                                <!-- tools card -->
                                <div class="card-tools">
                                    <!-- button with a dropdown -->
                                    <div class="btn-group">
                                        <div class="m-1">
                                            <a class="btn btn-info" href="#">
                                                근태확인
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body pt-0">
                                <!--The calendar -->
                                <div id="calendar" style="width: 100%"></div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </section>
                    <!-- Main row -->
                    <!-- Left col -->
                    <section class="col-lg-7 connectedSortable float-right">
                        <!-- TO DO List -->
                        <div class="card">
                            <div class="card-footer">
                                <span>게시판</span>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <ul class="todo-list" data-widget="todo-list">
                                    <li>게시글1</li>
                                    <li>게시글1</li>
                                    <li>게시글1</li>
                                    <li>게시글1</li>
                                    <li>게시글1</li>
                                </ul>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </section>
                </div>
                <section class="col-lg-5 connectedSortable float-left">
                    <div class="card-footer clearfix">
                        <button type="submit" class="btn btn-default">전자서명</button>
<!--                        <a href="#" type="button" class="btn btn-outline-secondary float-right ">전자서명 등록</a>-->
                        <button type="button" class="btn btn-outline-secondary float-right" data-toggle="modal" data-target="#myModal">전자서명 등록</button>
                    </div>
                </section>
                <section class="col-lg-7 connectedSortable float-right">
                    <div class="card-footer clearfix">
                        <button type="submit" class="btn btn-default">나의 결재선</button>
                        <a href="{{contextPath}}/line/addLine" type="button" class="btn btn-outline-dark float-right ">결재선 추가</a>
                    </div>
                </section>
                <!-- /.Left col -->
                <!-- right col (We are only adding the ID to make the widgets sortable)-->

                <!-- right col -->
                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{>layout/footer}}
</div>
<!-- ./wrapper -->
{{>layout/library}}

<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog modal-xl">
        <form id="addSign" method="post" action="{{contextPath}}/auth/mypage" enctype="multipart/form-data">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">전자서명 등록</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="card-body">
                        <input type="file" class="form-control" id="memberSign" name="file">
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-sm" id="apply" >적용</button>
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">닫기</button>
                </div>

            </div>
        </form>
    </div>
</div>

</body>
<script>
    <!--var user = {{user.userNo}};-->
    <!--var attatch = {{!user.attachNo}}-->

$(function () {
    $("#apply").click(function () {
        event.preventDefault();
        if (confirm("전자서명을 등록하시겠습니까?")) {
            $("#addSign").submit();
        }
    })
})

</script>

</html>
