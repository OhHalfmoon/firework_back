<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Dashboard</title>

    {{>layout/head}}
</head>
<body class="hold-transition sidebar-mini layout-fixed sidebar-collapse">
<div class="wrapper">

    {{>layout/header}}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        {{#user}}
                        <h1 class="m-0">{{name}}님의 회원정보</h1>
                        {{/user}}
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="{{contextPath}}/auth/mypage">mypage</a></li>
                            <li class="breadcrumb-item active">userinfo</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <!-- 작업할 때 이 항목 내용을 수정하세요 -->
        <section class="content mt-5">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-md-3">

                        <!-- Profile Image -->
                        <div class="card card-success card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-square"
                                         src="/dist/img/FIREWORKS.gif">
                                </div>
                                {{#user}}
                                <h3 class="profile-username text-center">{{name}}님</h3>

                                <p class="text-muted text-center">{{deptEntity.deptName}} / {{positionEntity.positionName}}</p>

                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b class="float-left">연락처 :</b><b>{{phoneNum}}</b>
                                    </li>
                                    <li class="list-group-item">
                                        <b class="float-left">email :</b><b>{{email}}</b>
                                    </li>
                                    <li class="list-group-item">
                                        <b class="float-left">생일 :</b><b>{{birthdate}}</b>
                                    </li>
                                    <li class="list-group-item">
                                        <b class="float-left">입사일 :</b><b>{{startdate}}</b>
                                    </li>
                                </ul>
                                {{/user}}
                                <div class="row col-12 justify-content-center mt-5">
                                    <div class="col-4">
                                        <a href="{{contextPath}}/auth/mypage" class="btn btn-outline-dark btn-block"><b>이전으로</b></a>
                                    </div>
                                    <div class="col-4">
                                        <a href="{{contextPath}}/auth/modify" class="btn btn-success btn-block"><b>정보수정</b></a>
                                    </div>
                                    <div class="col-4">
                                        <a href="{{contextPath}}/auth/modifyPw" class="btn btn-danger btn-block"><b>PW변경</b></a>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{>layout/footer}}
</div>
<!-- ./wrapper -->
{{>layout/library}}

</body>
</html>
