<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Dashboard</title>

    {{>layout/head}}
</head>
<body class="hold-transition sidebar-mini layout-fixed sidebar-collapse">
<div class="wrapper">
    {{>layout/header}}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>공지 사항</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">공지 사항</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-md-9">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h1 class="card-title">공지사항 수정</h1>
                            </div>
                            <!-- /.card-header -->
                            <form method="post" enctype="multipart/form-data">
                            {{#board}}
                                <div class="card-body">
                                    <input type="hidden" name="boardNo" value="{{boardNo}}">
                                    <div class="form-group">
                                        <input class="form-control" value="{{title}}" name="boardTitle">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" value="{{user.name}}" readonly>
                                        <input type="hidden" value="{{user.userNo}}" name="userNo">
                                    </div>
                                    <div class="form-group">
                                    <textarea class="form-control" style="height: 300px; resize: none" name="boardContent">{{content}}</textarea>
                                    </div>
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th style="width : 12%">파일번호</th>
                                            <th>파일이름</th>
                                            <th style="width : 10%">확장자</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{#fileList}}
                                            <tr>
                                                <td id={{attachNo}}>{{attachNo}}</a></td>
                                                <td id="originName">{{originName}}</a></td>
                                                <td id="ext">{{ext}}</a></td>
                                            </tr>
                                        {{/fileList}}
                                        </tbody>
                                    </table>
                                    {{^fileList}}
                                        <div>첨부된 파일이 없습니다.</div>
                                    {{/fileList}}
                                </div>
                            {{/board}}
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">
                                    <a href="/board/list" type="button" class="btn btn-secondary"></i> 목록 </a>
                                    <button id="btnModify" type="submit" class="btn btn-primary"> 저장 </button>
                                </div>
                            </div>
                            </form>
                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{>layout/footer}}

</div>
<!-- ./wrapper -->
{{>layout/library}}
<script>
    $(function () {
        $("#btnModify").click(function(e) {
            alert("수정되었습니다.");
        })
    })

</script>
</body>
</html>
