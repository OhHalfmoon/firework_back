<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FireWorks!</title>

    {{>layout/head}}
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    {{>layout/header}}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>게시판</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">Compose</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-md-9">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h1 class="card-title">공지사항 조회</h1>
                            </div>
                            <!-- /.card-header -->
                            <form method="post" id="frm">
                                {{#board}}
                                <div class="card-body">
                                    <div class="form-group">
                                        <input class="form-control" value="{{title}}" readonly>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" value="{{name}}" readonly>
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" style="height: 300px; resize: none" readonly>{{content}}</textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col">첨부파일</div>
                                        <br>
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th style="width : 12%">파일번호</th>
                                                <th>파일이름</th>
                                                <th style="width : 10%">확장자</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {{#fileList}}
                                                <tr>
                                                    <td id={{attachNo}}><a href="/upload/download/?fileNo={{attachNo}}">{{attachNo}}</a></td>
                                                    <td id="originName"><a href="/upload/download/?fileNo={{attachNo}}">{{originName}}</a></td>
                                                    <td id="ext"><a href="/upload/download/?fileNo={{attachNo}}">{{ext}}</a></td>
                                                </tr>
                                            {{/fileList}}
                                            </tbody>
                                        </table>
                                        {{^fileList}}
                                            <div>첨부된 파일이 없습니다.</div>
                                        {{/fileList}}
                                        <div class="col-12 attachBox"></div>
                                        <br>
                                    </div>
                                </div>
                                {{/board}}
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <div class="float-right">
                                        <input type="hidden" name="boardNo" value="{{boardNo}}">
                                        {{#user}}
                                            {{#isTeamLeader}}
                                                <button id="viewDeleteBtn" type="submit" formaction="/board/remove" class="btn btn-danger"> 삭제 </button>
                                                <a href="/board/modify/{{boardNo}}" type="button" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> 수정 </a>
                                            {{/isTeamLeader}}
                                            {{^isteamLeader}}
                                            {{/isteamLeader}}
                                        {{/user}}
                                        <a href="/board/list" type="button" class="btn btn-secondary"> 목록 </a>
                                    </div>
                                </div>
                            </form>
                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{>layout/footer}}

</div>
<!-- ./wrapper -->

{{>layout/library}}
<script>
   $(function () {
       $("#viewDeleteBtn").click(function () {
           if(confirm("삭제하시겠습니까?")) {
                return true;
              } else {
                return false;
           }
       })
   })

</script>
</body>
</html>
