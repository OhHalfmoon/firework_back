<script src="/dist/js/alarm.js"></script>
<script>
    $(function() {
        var alarmNo = 1;
        moment.locale('ko');
        alarmService.getList(alarmNo, function (result) {
            var length = 0;
            for (var i in result) {
                console.log(result[i].alarmCheck);
                if(result[i].alarmCheck == false) {
                    length += 1;
                }
            }
            $(".alarmcount").html(length);
            var str = "";
            for (var j in result) {
                str += getAlarmLiStr(result[i]);
            }
            str += `<div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item dropdown-footer">더보기</a>`
            $(".alarm").html(str);
        });

        function getAlarmLiStr(obj) {
            return `<div class="dropdown-divider" data-alarmno="${obj.alarmNo}"></div>
				<a href="#" class="dropdown-item">
                ${obj.alarmTitle}
				<span class="float-right text-muted text-sm">${moment(obj.regdate).fromNow()}</span>
                </a>
				`;
        }
    });
</script>